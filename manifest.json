{
  "manifest_version": 2,
  "name": "Email Buddy",
  "version": "1.0",
  "description": "An email assistant to help with all your day to day tasks.",
  "permissions": [
    "activeTab",
    "contextMenus",
    "gmail",
    "identity",
    "tabs",
    "https://mail.google.com/*"
  ],
   "background": {
    "service_worker": "background.js"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Email Buddy",
    "default_popup": "popup.html"
  }
}
